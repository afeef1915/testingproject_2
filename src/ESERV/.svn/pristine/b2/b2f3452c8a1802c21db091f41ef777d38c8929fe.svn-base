{% include 'ESERVMAINHelpersBundle:Form:required_msg.html.twig' with {'viewMode': 'view'} %}

<div id="eserv_user_output"></div>
{{form_start(form, { 'attr' : { 'id': 'newTempPassword' } })}}

<fieldset>
    {{ form_eservRow (form.password, { 'fieldSize': 4 }) }}
    {{ form_eservRow (form.confirmPassword, { 'fieldSize': 4 }) }}
</fieldset>

<fieldset>
    <div class="form-group">
        <div class="col-md-12">        
            <button type="button" id="cancel_newTempPassword_btn" class="btn btn-danger pull-left" ng-click="cancel()">Cancel</button>
            <div class="pull-right">
                <input class="btn btn-default" value="Reset" type="reset" id="_reset"/>            
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary',  'btn-loading': "is_processing.application_code_add", 'data-loading-text': "Saving..."} }) }}                       
            </div>
        </div>
    </div>        
</fieldset>
<div style="display: none">
    {{ form_rest(form) }}
</div>

{{form_end(form)}}

<script type="text/javascript">

    $(document).ready(function () {
        prepareAppForms('{{ form.vars.name }}', false, false, false, 'newTempPassword', function () {
            $('#cancel_newTempPassword_btn').click();
        });
    });
</script>
