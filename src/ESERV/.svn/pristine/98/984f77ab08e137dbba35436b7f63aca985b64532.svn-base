ESERV\HelpBundle\Components\KnowledgeBaseBundle\Entity\VfaqsRelatedDocuments:
    type: entity
    table: vfaqs_related_documents
    id:
        faq_item_seq:
            type: integer
            generator: { strategy: AUTO }
    fields:
        document_id:
            type: integer
            length: 15
        doc_name:
            type: string 
            length: 100
        author_id:
            type: integer
#        author_name:
#            type: string
#            length: 100
        source_id:
            type: integer
        title:
            type: string
            length: 100
        document_type:
            type: string 
            length: 1
        external_text:
            type: string 
            length: 600
        internal_text:
            type: string 
            length: 2000
        size_text:
            type: string
            length: 15
        document_extension:
            type: string
            length: 20
        rating:
            type: integer
        review_date:
            type: string
        rated_by_count:
            type: integer
        viewed_by_count:
            type: integer

