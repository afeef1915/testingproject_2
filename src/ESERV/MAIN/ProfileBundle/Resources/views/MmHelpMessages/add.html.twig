<h3>{{ 'Add a Help Message' | trans }}</h3>
{% include 'ESERVMAINHelpersBundle:Form:required_msg.html.twig' with {'viewMode': 'view'} %}

<div id="eserv_updateHelpMessage_output"></div>
{{form_start(form, { 'attr' : { 'id': 'updateHelpMessage' } })}}

<fieldset>
    {{ form_eservRow (form.messageType,{'labelSize':3, 'fieldSize':4}) }}
    {{ form_eservRow (form.severity,{'labelSize':3, 'fieldSize':4}) }}
    {{ form_eservRow (form.title,{'labelSize':3, 'fieldSize':4}) }}
    {{ form_eservRow (form.code, { 'labelSize':3, 'fieldSize': 3 }) }}
    {% include 'ESERVMAINHelpersBundle:Form:alt_languages.html.twig' with { 'alt_languages' : alt_languages, 'labelSize':3 } %}
    {{ form_eservRow (form.name, {'customPlaceHolder': 'Description', 'labelSize':3}) }}            
    {{ form_eservRow (form.isActive, { 'isCheckbox': true, 'labelSize':3 }) }}    
    {{ form_eservRow (form.moreLink, {'labelSize':3}) }}    

</fieldset>

<fieldset>
    {% include 'ESERVMAINHelpersBundle:Form:form_general_btns.html.twig' with { 'form_save' : form.save, 'hide_edit_button' : true, 'hide_cancel' : true, 'cancel_link' : true,  'cancelHref' : '#/admin/help_messages', 'closeBtnId' : 'cancel_AddHelpMessages_btn' } %}                                                                             
</fieldset>
<div style="display: none">
    {{ form_rest(form) }}
</div>

{{form_end(form)}}

<script type="text/javascript">
    $(document).ready(function() {
        prepareAppForms('{{ form.vars.name }}', false, false, '#/admin/help_messages');
    });
</script>
