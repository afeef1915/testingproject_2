<h3>{{ lang_name }}</h3>
{% include 'ESERVMAINHelpersBundle:Form:required_msg.html.twig' with {'viewMode': 'view'} %}

<div id="eserv_alt_lang_output"></div>
{{form_start(form, { 'attr' : { 'id': 'updateLanguage' } })}}

<fieldset>
    {{ form_eservRow (form.name, {'labelSize':3, 'fieldSize': 8, 'extraGroupClass': 'no_rquired' }) }}
    {{ form_eservRow (form.altName, {'labelSize':3, 'fieldSize': 8 }) }} 
    <div class="form-group">
        <div class="col-lg-3 control-label remove_content" style="font-weight: bold">
            {{ form.altLanguage.vars.label }}
        </div>        
        <div class="col-lg-6">            
            <div style="padding: 3px 0;">{{ form.altLanguage.vars.value }}</div>
        </div>
    </div>
</fieldset>
<fieldset>
    {% include 'ESERVMAINHelpersBundle:Form:form_general_btns.html.twig' with { 'form_save' : form.save, 'hide_edit_button' : true, 'hide_cancel' : true, 'cancel_link' : true,  'cancelHref' : '#/admin/alternative_language/' ~ lang_id, 'closeBtnId' : 'cancel_editAltLanguage_btn' } %}                                                                             
</fieldset>
<div style="display: none">
    {{ form_rest(form) }}
</div>

{{form_end(form)}}

<script type="text/javascript">    
    $(document).ready(function() {        
        prepareAppForms('{{ form.vars.name }}', false, false, '#/admin/alternative_language/{{ lang_id }}');
        
        $('.no_rquired label').removeClass('required');
    });    
</script>
