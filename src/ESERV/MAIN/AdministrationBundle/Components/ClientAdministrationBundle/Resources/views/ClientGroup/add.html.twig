<h3>Add new Client Group</h3>
{% include 'ESERVMAINHelpersBundle:Form:required_msg.html.twig' with {'viewMode': 'view'} %}

<div id="eserv_updateClientGroup_output"></div>
{{form_start(form, { 'attr' : { 'id': 'updateClientGroup' } })}}

<fieldset>
    <div class="form-group">
        {{ form_label(form.title, null, {'label_attr': {'class': 'col-lg-4 control-label'} }) }}
        <div class="col-lg-5">
            {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Title'} }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.description, null, {'label_attr': {'class': 'col-lg-4 control-label'} }) }}
        <div class="col-lg-5">
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'} }) }}
        </div>
    </div>    
    <div class="form-group">
        {{ form_label(form.name, null, {'label_attr': {'class': 'col-lg-4 control-label'} }) }}
        <div class="col-lg-5">
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Table Name'} }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.entity_id, null, {'label_attr': {'class': 'col-lg-4 control-label'} }) }}
        <div class="col-lg-5">
            {{ form_widget(form.entity_id, {'attr': {'class': 'form-control', 'placeholder': ''} }) }}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(form.sub_entity_id, null, {'label_attr': {'class': 'col-lg-4 control-label'} }) }}
        <div class="col-lg-5">
            {{ form_widget(form.sub_entity_id, {'attr': {'class': 'form-control', 'placeholder': ''} }) }}
        </div>
    </div>    
</fieldset>

<fieldset>
    <div class="form-group">
        <div class="col-md-12">
            <a class="btn btn-danger pull-left" href="#/admin">{{ 'Cancel' | trans }}</a>
            <div class="pull-right">
                <input class="btn btn-default" value="{{ 'Reset' | trans }}" type="reset" />
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary',  'btn-loading': "is_processing.client_group_add", 'data-loading-text': "Saving..."} }) }}
            </div>
        </div>
    </div>        
</fieldset>
<div style="display: none">
    {{ form_rest(form) }}
</div>

{{form_end(form)}}

<script type="text/javascript">
    $(document).ready(function() {
        prepareAppForms('{{ form.vars.name }}', false, false, '#/admin');
    });
</script>