<html
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        {% set NOW = "now" | date('U') %}

        <title ng-bind-html="mtl_project_title"></title>
        <link rel="shortcut icon" href="{{ asset ('common/assets/images/icons/favicon.ico') }}" />
        <link href="{{ asset ('clients/'~ app_client ~'/themes/'~ app_theme ~'/css/bootstrap.min.css') }}" rel="stylesheet" />
        <link href="{{ asset ('common/assets/libs/jquery/jquery-ui/css/jquery-ui.min.css') }}" rel="stylesheet" />
        <link href="{{ asset ('common/assets/css/libs/dataTables/datatables.css') }}" rel="stylesheet" />
        <link href="{{ asset ('common/assets/css/font-awesome.min.css') }}" rel="stylesheet" />
        <link href="{{ asset ('common/assets/css/mtl_eserv.css') }}" rel="stylesheet" />
        <link href="{{ asset ('common/assets/css/extras/login_form_css.css') }}" rel="stylesheet" />
        <link themer-link>

        {% block extra_css_block %}
        {% endblock %}
        <!--[if lt IE 9]>
        <script src="{{ asset ('common/assets/js/html5shiv.min.js') }}"></script>
        <script src="{{ asset ('common/assets/js/respond.min.js') }}"></script>
        <![endif]-->
    </head>
    <div class="col-md-4 col-md-offset-4 login_content registered_teacher">
        <div>
            <div>
                <div class="row">
                    <div class="col-lg-12 eserv_site_title">
                        {{ 'Account Activation' | eservices_db_trans }}
                    </div>
                </div>
            </div>
            <div>
                <div class="row">
                    <div class="col-lg-12">
                        <div>
                            <div id="eserv_PassConfAct_output"></div>
                            <form id="PassConfAct" name="{{ form.vars.name }}" action="{{ path("fos_user_security_process_user_activation", { 'conf_token' : conf_token, 'success_path' : success_path | url_encode }) }}" method="post" autocomplete="off">                                
                                {{ form_row(form._token) }}
                                <div class="eserv_container_form_errors"> {{ (error is defined ? error) }} </div>                                
                                <div class="form-group ">
                                    <label for="{{ form.password.vars.id }}" class="control-label remove_content">{{ 'Verification Code' | eservices_db_trans }}</label>
                                    <div class="input-group">
                                        <input 
                                            type="password" 
                                            id="{{ form.password.vars.id }}" 
                                            name="{{ form.vars.name }}[{{ form.password.vars.name }}]" 
                                            class="form-control" 
                                            value="" 
                                            placeholder="{{ 'Verification Code' | eservices_db_trans }}" 
                                            data-eservfieldtype="text" 
                                            data-eservvalidation="required"
                                            autocomplete="off" />
                                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    </div>
                                    <div class="clearfix"></div>
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label for="{{ form.newPassword.vars.id }}" class="control-label remove_content">{{ 'New Password' | eservices_db_trans }}</label>
                                    <div class="input-group">
                                        <input 
                                            type="password" 
                                            id="{{ form.newPassword.vars.id }}" 
                                            name="{{ form.vars.name }}[{{ form.newPassword.vars.name }}]" 
                                            class="form-control" 
                                            placeholder="******" 
                                            data-eservfieldtype="text" 
                                            data-eservvalidation="required"
                                            autocomplete="off" />
                                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    </div>
                                    <div class="clearfix"></div>
                                    <span class="help-block"></span>
                                </div>
                                <div class="form-group">
                                    <label for="{{ form.confirmNewPassword.vars.id }}" class="control-label remove_content">{{ 'Confirm Password' | eservices_db_trans }}</label>
                                    <div class="input-group">
                                        <input 
                                            type="password" 
                                            id="{{ form.confirmNewPassword.vars.id }}" 
                                            name="{{ form.vars.name }}[{{ form.confirmNewPassword.vars.name }}]" 
                                            class="form-control" 
                                            placeholder="******" 
                                            data-eservfieldtype="text" 
                                            data-eservvalidation="required"
                                            autocomplete="off" />
                                        <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                    </div>
                                    <div class="clearfix"></div>
                                    <span class="help-block"></span>
                                </div>
                                <div class="eserv_form_btns">
                                    <input type="reset" id="_rest" class="btn btn-default text-center pull-left" name="_reset" value="{{ 'Clear All' | eservices_db_trans }}" />
                                    <input type="submit" id="_submit" class="btn btn-info text-center pull-right" name="_submit" value="{{ 'Activate' | eservices_db_trans }}" />
                                    <div class="clearfix"></div>
                                </div>                                
                            </form>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="{{ asset ('common/assets/libs/jquery/jquery.min.js') }}?v={{ app_version }}"></script>
    <script type="text/javascript">

    </script>
</body>
</html>